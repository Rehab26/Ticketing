@model TicketingSystem.Web.Client.Models.LoginModel
@{
    Layout = null;
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HelpTick | @ViewBag.Title</title>
    <link href="~/dist/css/style.min.css" rel="stylesheet">
</head>
<body>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative" style="        background: url(../assets/images/big/auth-bg.jpg) no-repeat center center;
">
            <div class="col-lg-4 shadow-lg col-md-7  bg-section-v2">
                <div class="p-3">
                    <h2 class="mt-3 text-center">Login</h2>
                    <form class="mt-4">
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "text-dark" })
                                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your phone number" } })
                                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "text-dark" })
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your password" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-12 text-center">
                                <input id="btnSubmit" type="submit" value="Login" class="btn btn-block btn-info" />
                            </div>
                            <div class="col-lg-12 text-center mt-6">
                                Don't have an account? @Html.ActionLink("Sign up here", "Register")
                            </div>
                            <div class="col-lg-12 text-center mt-6">
                                Forgot Password? @Html.ActionLink("Reset Password", "ForgotPassword")
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</body>
</html>