@model TicketingSystem.Web.Employee.Models.TicketAssignment

@{ Layout = null;}
<!DOCTYPE html>
<head>
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/style.min.css" rel="stylesheet" />
</head>
<html>
<body>

    @using (Html.BeginForm("AssignTicket", "Ticket", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return SubmitForm(this)" }))
    {

        <h1 class="text-dark">Assign to:</h1>
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            @Html.HiddenFor(model => model.FirstName)
            @Html.HiddenFor(model => model.LastName)
            @Html.HiddenFor(model => model.Id)

        </div>

        <div class="form-group">

            <div class="col-md-10">
                @Html.DropDownList("EmployeeId", new SelectList(ViewBag.data, "EmployeeId", "FullName"), "Select", new { @class = "form-control" })

            </div>

            <div class="col-md-offset-2 col-md-10">
                <br />
                <input id="btnSubmit" type="submit" value="Submit" class="btn btn-info" />
            </div>
        </div>


    }
    
</body>
</html>


