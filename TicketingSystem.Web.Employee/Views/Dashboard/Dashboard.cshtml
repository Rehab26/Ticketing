@model TicketingSystem.Web.Employee.Models.UserViewModel
@{
    ViewBag.Title = "Dashboard";
}

<script src="~/assets/libs/jquery/dist/jquery.min.js"></script>
<!-- Custom CSS -->
<link href="../assets/extra-libs/c3/c3.min.css" rel="stylesheet">
