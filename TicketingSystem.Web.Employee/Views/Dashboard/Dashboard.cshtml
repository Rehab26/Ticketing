<link href="../assets/extra-libs/jvector/jquery-jvectormap-2.0.2.css" rel="stylesheet" />
<!-- Custom CSS -->
<link href="../dist/css/style.min.css" rel="stylesheet">

<div class="container-fluid">
    <div class="col-7 align-self-center">
        <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">@ViewBag.Title</h3>
    </div>
    <!-- *************************************************************** -->
    <!-- Start First Cards -->
    <!-- *************************************************************** -->
    <div class="card-group">
        <div class="card border-right">
            <div class="card-body">
                <div class="d-flex d-lg-flex d-md-block align-items-center">
                    <div>
                        <div class="d-inline-flex align-items-center">
                            <div>
                                @if (ViewBag.EmployeeCount != null)
                                {
                                    <h2 class="text-dark mb-1 font-weight-medium">@ViewBag.EmployeeCount</h2>
                                }
                            </div>
                        </div>
                        <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">Employees</h6>
                    </div>
                    <div class="ml-auto mt-md-3 mt-lg-0">
                        <span class="opacity-7 text-muted"><i data-feather="users"></i></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card border-right">
            <div class="card-body">
                <div class="d-flex d-lg-flex d-md-block align-items-center">
                    <div>
                        <div class="d-inline-flex align-items-center">
                            <div>
                                @if (ViewBag.ClientCount != null)
                                {
                                    <h2 class="text-dark mb-1 font-weight-medium">@ViewBag.ClientCount</h2>
                                }
                            </div>
                        </div>
                        <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">
                            Clients
                        </h6>
                    </div>
                    <div class="ml-auto mt-md-3 mt-lg-0">
                        <span class="opacity-7 text-muted"><i data-feather="users"></i></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card border-right">
            <div class="card-body">
                <div class="d-flex d-lg-flex d-md-block align-items-center">
                    <div>
                        <div class="d-inline-flex align-items-center">
                            <div class="d-inline-flex align-items-center">
                                <div>
                                    @if (ViewBag.OpenTickets != null)
                                    {
                                        <h2 class="text-dark mb-1 font-weight-medium">@ViewBag.OpenTickets</h2>
                                    }
                                </div>
                            </div>
                        </div>
                        <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">Opened Tickets</h6>
                    </div>
                    <div class="ml-auto mt-md-3 mt-lg-0">
                        <span class="opacity-7 text-muted"><i data-feather="file-plus"></i></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="d-flex d-lg-flex d-md-block align-items-center">
                    <div>
                        <div class="d-inline-flex align-items-center">
                            <div>
                                @if (ViewBag.TicketCount != null)
                                {
                                    <h2 class="text-dark mb-1 font-weight-medium">@ViewBag.TicketCount</h2>
                                }
                            </div>
                        </div>
                        <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">Tickets</h6>
                    </div>
                    <div class="ml-auto mt-md-3 mt-lg-0">
                        <span class="opacity-7 text-muted"><i data-feather="tag"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- start chart -->

<div class="row">
    <div class="col-lg-6 col-md-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Tickets Status</h4>
                <div id="campaign-v2" class="mt-2" style="height:283px; width:100%;"></div>
                <ul class="list-style-none mb-0">
                    <li>
                        <i class="fas fa-circle text-primary font-10 mr-2"></i>
                        <span class="text-muted">Opened Tickets</span>
                        <span class="text-dark float-right font-weight-medium">
                            @if (ViewBag.OpenTickets != null)
                            {
                                @ViewBag.OpenTickets
                            }
                        </span>
                    </li>
                    <li class="mt-3">
                        <i class="fas fa-circle text-danger font-10 mr-2"></i>
                        <span class="text-muted">Inprogress Tickets</span>
                        <span class="text-dark float-right font-weight-medium">
                            @if (ViewBag.InprogressTickets != null)
                            {
                                @ViewBag.InprogressTickets
                            }
                        </span>
                    </li>
                    <li class="mt-3">
                        <i class="fas fa-circle text-cyan font-10 mr-2"></i>
                        <span class="text-muted">Closed Tickets</span>
                        <span class="text-dark float-right font-weight-medium">
                            @if (ViewBag.ClosedTickets != null)
                            {
                                @ViewBag.ClosedTickets
                            }
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Tickets Per Countries</h4>
                <div class="" style="height:180px">
                    <div id="visitbylocate" style="height:100%"></div>
                </div>
                <div class="row mb-3 align-items-center mt-1 mt-5">
                    <div class="col-4 text-right">
                        <span class="text-muted font-14">Saudi Arabia</span>
                    </div>
                    <div class="col-5">
                        <div class="progress" style="height: 5px;">
                            <div id="progressbar" class="progress-bar bg-primary" role="progressbar" style="width:@(ViewBag.SaudiCount)%"
                                 aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="col-3 text-right">
                        <span class="mb-0 font-14 text-dark font-weight-medium">
                            @if (ViewBag.SaudiCount != null)
                            {
                                @ViewBag.SaudiCount;
                            }
                            
                        </span>
                    </div>
                </div>
                <div class="row mb-3 align-items-center">
                    <div class="col-4 text-right">
                        <span class="text-muted font-14">Egypt</span>
                    </div>
                    <div class="col-5">
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar bg-danger" role="progressbar" style="width:@(ViewBag.EgyptCount)%"
                                 aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="col-3 text-right">
                        <span class="mb-0 font-14 text-dark font-weight-medium">
                            @if (ViewBag.EgyptCount != null)
                            {
                                @ViewBag.EgyptCount;
                            }
                        </span>
                    </div>
                </div>
                <div class="row mb-3 align-items-center">
                    <div class="col-4 text-right">
                        <span class="text-muted font-14">Jordan</span>
                    </div>
                    <div class="col-5">
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar bg-cyan" role="progressbar" style="width:@(ViewBag.JordanCount)%"
                                 aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="col-3 text-right">
                        <span class="mb-0 font-14 text-dark font-weight-medium">
                            @if (ViewBag.JordanCount != null)
                            {
                                @ViewBag.JordanCount;
                            }
                        </span>
                    </div>
                </div>
                <div class="row align-items-center">
                    <div class="col-4 text-right">
                        <span class="text-muted font-14">UAE</span>
                    </div>
                    <div class="col-5">
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width:@(ViewBag.EmiratesCount)%"
                                 aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="col-3 text-right">
                        <span class="mb-0 font-14 text-dark font-weight-medium">
                            @if (ViewBag.EmiratesCount != null)
                            {
                                @ViewBag.EmiratesCount;
                            }
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>

    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h2 class="text-dark font-weight-medium">Top Five Employees </h2>
                <table class="table table-striped" id="datatable">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                Total Solved Tickets
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            </div>
        </div>
    </div>
         
